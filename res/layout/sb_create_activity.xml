<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <RelativeLayout 
        android:id="@+id/create_rl1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/anycolor"
        >
        <Button 
        	android:id="@+id/create_back"
        	android:layout_width="50dp"
        	android:layout_height="match_parent"
        	android:text="返回"
        	android:textSize="20sp"
	        android:textColor="#ffffff"
	        android:gravity="center"
	        android:background="@drawable/button_selector"
        />
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/create_back"
            android:layout_centerVertical="true"
            android:background="#d2dbda"
            />
	    <TextView 
	        android:id="@+id/create_title"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:padding="5dp"
	        android:text="新建笔记"
	        android:textSize="25sp"
	        android:textColor="#ffffff"
	        android:layout_centerInParent="true"
	        android:gravity="center"
	        />
    </RelativeLayout>
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/create_rl1"
        android:layout_marginTop="10dp"
        android:scrollbars="none"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <RelativeLayout 
	        android:id="@+id/create_rl2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="20dp"
	        android:paddingBottom="30dp"
	        >
		   <TextView 
		       android:id="@+id/create_txt1"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:padding="10dp"
		       android:text="主题:"
		       android:textSize="18sp"
		       android:textColor="#000000"
		       />
		   <EditText 
		       android:id="@+id/create_et1"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:layout_below="@+id/create_txt1"
		       android:padding="10dp"
		       android:hint="6字以内哦~"
		       android:textSize="16sp"
		       android:maxLength="6"
		       android:background="@drawable/et_shape"
		       />
		   <TextView 
		       android:id="@+id/create_txt2"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:layout_below="@+id/create_et1"
		       android:padding="10dp"
		       android:text="内容:"
		       android:textSize="18sp"
		       android:textColor="#000000"
		       />
		   <EditText 
		       android:id="@+id/create_et2"
		       android:layout_width="match_parent"
		       android:layout_height="150dp"
		       android:layout_below="@+id/create_txt2"
		       android:padding="10dp"
		       android:hint="内容。。。"
		       android:gravity="left|top"
		       android:textSize="16sp"
		       android:background="@drawable/et_shape"
		       />
		   <TextView 
		       android:id="@+id/create_warn"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:layout_below="@+id/create_et2"
		       android:padding="10dp"
		       android:text="提示:支持最多拍摄3张照片！"
		       android:textSize="15sp"
		       android:textColor="#000000"
		       android:visibility="visible"
		       />
		    <TextView 
		       android:id="@+id/create_txt3"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:layout_below="@+id/create_warn"
		       android:padding="10dp"
		       android:text="图片:"
		       android:textSize="18sp"
		       android:textColor="#000000"
		       android:visibility="gone"
		       />
		    <HorizontalScrollView 
		       android:id="@+id/create_hs"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:layout_below="@+id/create_txt3"
		       android:layout_marginTop="10dp"
		       android:scrollbars="none"
		       android:visibility="gone"
		       >
		       <RelativeLayout 
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"		           
		           >
				    <ImageView
				       android:id="@+id/create_photo1"
				       android:layout_width="120dp"
				       android:layout_height="180dp"
				       android:layout_alignParentLeft="true"
				       android:scaleType="fitXY"
				       android:background="#ffffff"
				       android:visibility="gone"
				       />
		
				   <ImageView 
				       android:id="@+id/create_photo2"
				       android:layout_width="120dp"
				       android:layout_height="wrap_content"
				       android:layout_alignTop="@+id/create_photo1"
				       android:layout_alignBottom="@+id/create_photo1"
				       android:layout_toRightOf="@+id/create_photo1"
				       android:layout_marginLeft="10dp"
				       android:scaleType="fitXY"
				       android:background="#ffffff"
				       android:visibility="gone"
				       />
				   <ImageView 
				       android:id="@+id/create_photo3"
				       android:layout_width="120dp"
				       android:layout_height="wrap_content"
				       android:layout_alignTop="@+id/create_photo1"
				       android:layout_alignBottom="@+id/create_photo1"
				       android:layout_toRightOf="@+id/create_photo2"
				       android:layout_marginLeft="10dp"
				       android:scaleType="fitXY"
				       android:background="#ffffff"
				       android:visibility="gone"
				       /> 
		       </RelativeLayout>
		   </HorizontalScrollView>
		   
		   <Button 
		       android:id="@+id/create_camera"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:layout_below="@+id/create_hs"
		       android:layout_marginTop="20dp"
		       android:layout_alignLeft="@+id/create_hs"
		       android:layout_alignRight="@+id/create_hs"
		       android:padding="10dp"
		       android:gravity="center"
		       android:text="拍照"
		       android:textSize="20sp"
		       android:textColor="#ffffff"
		       android:background="@drawable/button_selector"
		       />
		   <!-- <Button 
		       android:id="@+id/create_record"
		       android:layout_width="80dp"
		       android:layout_height="wrap_content"
		       android:layout_alignTop="@+id/create_camera"
		       android:layout_centerHorizontal="true"
		       android:gravity="center"
		       android:padding="5dp"
		       android:text="语音"
		       android:textSize="18sp"
		       android:textColor="#ffffff"
		       android:background="@drawable/button_selector"
		       /> -->
		  <!--  <Button 
		       android:id="@+id/create_preview"
		       android:layout_width="80dp"
		       android:layout_height="wrap_content"
		       android:layout_alignTop="@+id/create_camera"
		       android:layout_alignParentRight="true"
		       android:layout_marginRight="20dp"
		       android:gravity="center"
		       android:padding="5dp"
		       android:text="预览"
		       android:textSize="18sp"
		       android:textColor="#ffffff"
		       android:background="@drawable/button_selector"
		       /> -->
		  
		   <Button 
		       android:id="@+id/create_ok"
		       android:layout_width="match_parent"
		       android:layout_height="wrap_content"
		       android:layout_below="@+id/create_camera"
		       android:layout_marginTop="20dp"
		       android:layout_alignLeft="@+id/create_camera"
		       android:layout_alignRight="@+id/create_camera"
		       android:padding="10dp"
		       android:gravity="center"
		       android:text="保存"
		       android:textSize="20sp"
		       android:textColor="#ffffff"
		       android:background="@drawable/button_selector"
		       />
	    </RelativeLayout> 
        
    </ScrollView>
     
</RelativeLayout>    