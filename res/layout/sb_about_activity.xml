<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <RelativeLayout 
        android:id="@+id/about_rl1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/anycolor"
        >
        <Button 
        	android:id="@+id/about_back"
        	android:layout_width="50dp"
        	android:layout_height="match_parent"
        	android:text="返回"
        	android:textSize="20sp"
	        android:textColor="#ffffff"
	        android:gravity="center"
	        android:background="@drawable/button_selector"
        />
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/about_back"
            android:layout_centerVertical="true"
            android:background="#d2dbda"
            />
	    <TextView 
	        android:id="@+id/about_title"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:padding="5dp"
	        android:text="关于"
	        android:textSize="25sp"
	        android:textColor="#ffffff"
	        android:layout_centerInParent="true"
	        android:gravity="center"
	        />
    </RelativeLayout>
    <ImageView 
        android:id="@+id/about_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/about_rl1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_launcher"
        android:background="#00000000"
        />
    <RelativeLayout 
        android:id="@+id/about_rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_logo"
        android:layout_marginTop="80dp"
        >
	    <RelativeLayout 
	        android:id="@+id/about_rl3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/anycolor"
	        >
		     <TextView 
	           android:id="@+id/about_rl2_version"
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:padding="10dp"
	           android:text="当前版本"
	           android:textSize="20sp"
	           android:textColor="#ffffff"
	           android:gravity="left|center_vertical"
	           /> 
	         <TextView 
	           android:id="@+id/about_rl2_version_info"
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:layout_alignParentRight="true"
	           android:layout_marginRight="10dp"
	           android:padding="10dp"
	           android:text="1.0版"
	           android:textSize="18sp"
	           android:textColor="#ffffff"
	           android:gravity="right|center_vertical"
	             />
	    </RelativeLayout>
	    <View 
	        android:id="@+id/v1"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:layout_below="@+id/about_rl3"
	        android:background="#d2dbda"
	        />
	         <Button 
	           android:id="@+id/about_web"
	           android:layout_width="match_parent"
	           android:layout_height="wrap_content"
	           android:layout_below="@+id/v1"
	           android:drawableRight="@drawable/icon_right"
	           android:text="应用推荐"
	           android:textSize="18sp"
	           android:textColor="#ffffff"
	           android:gravity="left|center"
	           android:padding="10dp"
	           android:background="@drawable/button_selector"
	           /> 
       
    </RelativeLayout>
    
    </RelativeLayout>