<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
     <RelativeLayout 
        android:id="@+id/search_rl1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/anycolor"
        >
        <Button 
        	android:id="@+id/search_back"
        	android:layout_width="50dp"
        	android:layout_height="match_parent"
        	android:text="返回"
        	android:textSize="20sp"
	        android:textColor="#ffffff"
	        android:gravity="center"
	        android:background="@drawable/button_selector"
        />
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/search_back"
            android:layout_centerVertical="true"
            android:background="#d2dbda"
            />
	    <TextView 
	        android:id="@+id/search_title"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:padding="5dp"
	        android:text="一键查找"
	        android:textSize="25sp"
	        android:textColor="#ffffff"
	        android:layout_centerHorizontal="true"
	        android:gravity="center"
	        />
    </RelativeLayout>
    <EditText 
        android:id="@+id/search_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_rl1"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:hint="主题/内容关键字"
        android:textSize="18sp"
        android:background="@drawable/sb_et_bg"
        />
    <Button 
        android:id="@+id/search_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/search_txt"
        android:layout_alignRight="@+id/search_txt"
        android:layout_below="@+id/search_txt"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:text="搜索"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:background="@drawable/button_selector"
        />
    <ListView 
        android:id="@+id/search_ls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_ok"
        android:layout_margin="20dp"
        android:scrollbars="none"
        android:divider="#00000000"
        ></ListView>
    </RelativeLayout>