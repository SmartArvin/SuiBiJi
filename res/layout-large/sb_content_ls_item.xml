<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >
    <RelativeLayout
        android:id="@+id/content_ls_rl1" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView 
	        android:id="@+id/content_ls_txt1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:gravity="left|center_vertical"
	        android:textSize="25sp"
	        android:textColor="@color/anycolor"
	        android:padding="10dp"
        />
         <TextView 
	        android:id="@+id/content_ls_txt2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignTop="@+id/content_ls_txt1"
	        android:layout_alignBottom="@+id/content_ls_txt1"
	        android:layout_alignParentRight="true"
	        android:gravity="right|center"
	        android:layout_marginRight="10dp"
	        android:textSize="22sp"
	        android:textColor="#617070"
        />
    </RelativeLayout>
    <TextView 
        android:id="@+id/content_ls_txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_ls_rl1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:textSize="25sp"
        android:textColor="#617070"
        />
    <TextView 
        android:id="@+id/content_ls_photo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_ls_rl1"
        android:textColor="#ffffff"
        />
    <TextView 
        android:id="@+id/content_ls_photo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_ls_rl1"
        android:textColor="#ffffff"
        />
    <TextView 
        android:id="@+id/content_ls_photo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_ls_rl1"
        android:textColor="#ffffff"    
           />
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/anycolor"
        />
  </RelativeLayout>