<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="#fff"
    >
    <TextView 
        android:id="@+id/safe_change_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="修改密码"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@color/anycolor"
        />
    <RelativeLayout 
        android:id="@+id/edit_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/safe_change_title"
        android:layout_marginTop="5dp"
        >
         <TextView 
	        android:id="@+id/safe_change_txt1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:text="原始密码"
	        android:textSize="22sp"
	        android:gravity="left"
	        android:textColor="#000"
	        android:background="#fff"
	        />
         <EditText 
            android:id="@+id/safe_change_et1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/safe_change_txt1"
	        android:paddingLeft="15dp"
	        android:textSize="20sp"
	        android:inputType="number"
	        android:gravity="left"
	        android:textColor="#000"
	        android:maxLength="6"
	        android:background="@drawable/sb_et_bg"
             />
         <TextView 
	        android:id="@+id/safe_change_txt2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/safe_change_et1"
	        android:padding="5dp"
	        android:text="新密码"
	        android:textSize="22sp"
	        android:gravity="left"
	        android:textColor="#000"
	        android:background="#fff"
	        />
         <EditText 
            android:id="@+id/safe_change_et2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/safe_change_txt2"
	        android:paddingLeft="15dp"
	        android:inputType="number"
	        android:textSize="20sp"
	        android:gravity="left"
	        android:textColor="#000"
	        android:maxLength="6"
	        android:background="@drawable/sb_et_bg"
             />
          <TextView 
	        android:id="@+id/safe_change_txt3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/safe_change_et2"
	        android:padding="5dp"
	        android:text="确认密码"
	        android:textSize="22sp"
	        android:gravity="left"
	        android:textColor="#000"
	        android:background="#fff"
	        />
         <EditText 
            android:id="@+id/safe_change_et3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/safe_change_txt3"
	        android:paddingLeft="15dp"
	        android:textSize="20sp"
	        android:gravity="left"
	        android:inputType="number"
	        android:textColor="#000"
	        android:maxLength="6"
	        android:background="@drawable/sb_et_bg"
             />
    </RelativeLayout>
   
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_rl"
        android:padding="10dp"
        >
	      <Button 
	        android:id="@+id/safe_change_cancle"
	        android:layout_width="90dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:padding="5dp"
	        android:text="取消"
	        android:textSize="20sp"
	        android:textColor="#fff"
	        android:background="#dbe6e2"
	        />
	     <Button 
	        android:id="@+id/safe_change_ok"
	        android:layout_width="90dp"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignTop="@+id/safe_change_cancle"
	        android:layout_alignBottom="@+id/safe_change_cancle"
	        android:padding="5dp"
	        android:text="确定"
	        android:textSize="20sp"
	        android:textColor="#fff"
	        android:background="@drawable/button_selector"
	        />
    </RelativeLayout>
    
</RelativeLayout>